{{!
  @template mod_moodleforum/post_dummy_cantsee

  moodleforum post_dummy_cantsee template.
  The purpose of this template is to render a list of discussions for the view.php.

   Example context (json):
   {
   }
}}

<a id="p{{ postid }}"></a>

<div class="moodleforumpost clearfix" role="region" aria-label="{{# str}} hiddenmoodleforumpost, moodleforum {{/str}}">

    {{! The heading row. }}
    <div class="row header">

        <div class="left picture">
        </div>

        <div class="topic{{^ parent }} starter{{/parent}}">

            <div class="subject">
                {{# str }} moodleforumsubjecthidden, moodleforum {{/str}}
            </div>
            <div class="author">
                {{# str }} moodleforumauthorhidden, moodleforum {{/str}}
            </div>
        </div>
    </div>

    {{! The body row. }}
    <div class="row">
        <div class="left side">&nbsp;</div>
        <div class="content">
            {{# str}} moodleforumbodyhidden, moodleforum {{/str}}
        </div>
    </div>

</div>




















